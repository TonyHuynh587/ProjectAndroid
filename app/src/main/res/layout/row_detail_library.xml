<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="18dp"
    android:paddingEnd="20dp"
    android:paddingStart="20dp"
    android:paddingTop="18dp">

    <ImageView
        android:id="@+id/lib_download_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_download"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/lib_file_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/lib_download_image"
        android:text="Demo.docx"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/lib_file_des_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lib_file_name_text"
        android:layout_toEndOf="@id/lib_download_image"
        android:textColor="#9b9b9b"
        android:textSize="14sp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/create_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sep 03"
        android:textColor="@color/colorAccent"
        android:layout_below="@id/lib_file_name_text"
        android:textSize="14sp"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>